<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!--标题-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/tvTilete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="HOHO"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </androidx.cardview.widget.CardView>

        <!--插件加载状态-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="5dp">
        <!-- 插件状态显示 -->
        <TextView
            android:id="@+id/tvPluginStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="插件：未加载"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />
    </androidx.cardview.widget.CardView>

        <!-- 用户信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户信息"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户ID: 未获取到"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户名: 未获取到"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 会员等级卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="会员等级设置"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前等级："
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnerMemberGrade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 操作功能卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="皮肤管理"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- 导出现有皮肤 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnExport"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="导出现有皮肤"
                        android:textAllCaps="false"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/ivExportStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 删除皮肤缓存 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="删除皮肤缓存"
                        android:textAllCaps="false"
                        android:backgroundTint="#F44336"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/ivDeleteStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 更新皮肤缓存 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="更新皮肤缓存"
                        android:textAllCaps="false"
                        android:backgroundTint="#2196F3"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/ivUpdateStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 启用/禁用皮肤 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnActivate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="启用皮肤/禁用皮肤"
                        android:textAllCaps="false"
                        android:backgroundTint="#FF9800"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/ivActivateStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 下载操作卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="资源下载"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- 下载资源包 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnDownload"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="下载资源包 (Github)"
                        android:textAllCaps="false"
                        android:background="@color/purple_500"
                        android:textColor="@color/white"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- 打开资源文件夹 -->
                <Button
                    android:id="@+id/btnOpenResourceFolder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="打开资源文件夹"
                    android:textAllCaps="false"
                    android:background="@color/purple_500"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"/>
                
                <!-- 主题管理 -->
                <Button
                    android:id="@+id/btnThemeManager"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="主题管理"
                    android:textAllCaps="false"
                    android:background="@color/purple_500"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 信息提示卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SD CARD/Android/media/com.eg.android.AlipayGphone/"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvGithubLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GITHUB REPO / 说明 / 项目源码"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="当选择等级“原有”时，存在数据库缓存，需要重登账号"
                    android:textColor="#FF9800"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 底部信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Copyright © Nov30th, HOHO, 裘小杰"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Version: "
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>